<?php
$pages = Mage::getModel('cms/page')->getCollection()->load();
$for_brides = array();
$consignors = array();
$about = array();
$measurement_info = array();

foreach($pages as $page)
{
    $data = $page->getData();
    if(preg_match("/for_brides\//", $data['identifier']))
        $for_brides[] = $data;
    if(preg_match("/consignors\//", $data['identifier']))
        $consignors[] = $data;
    if(preg_match("/about\//", $data['identifier']))
        $about[] = $data;
    if(preg_match("/measurement_info\//", $data['identifier']))
        $measurement_info[] = $data;
}
?>

<!-- BIG FOOTER -->
		<div id="big_footer">
			<div class="column">
				<h5><?php echo $this->__("footer_1column_header");?></h5>
				<ul>
                                    <?php
                                    foreach($for_brides as $value)
                                        echo "<li><a href='".$this->getUrl($value['identifier'])."'>".$value['title']."</a></li>";
                                    ?>
				</ul>
			</div>

			<div class="column">
				<h5><?php echo $this->__("footer_2column_header");?></h5>
				<ul>
                                    <?php
                                    foreach($consignors as $value)
                                        echo "<li><a href='".$this->getUrl($value['identifier'])."'>".$value['title']."</a></li>";
                                    ?>
				</ul>
			</div>

			<div class="column">
				<h5><?php echo $this->__("footer_3column_header");?></h5>
				<ul>
                                    <?php
                                    foreach($about as $value)
                                        echo "<li><a href='".$this->getUrl($value['identifier'])."'>".$value['title']."</a></li>";
                                    ?>
				</ul>
			</div>

			<div class="column last">
				<h5><?php echo $this->__("footer_4column_header");?></h5>
				<ul>
                                    <?php
                                    foreach($measurement_info as $value)
                                    {
                                        echo "<li><a href='".$this->getUrl($value['identifier'])."'>".$value['title']."</a></li>";
                                        if($value['identifier'] == "measurement_info/customer_service")
                                        {
                                            echo "<li><a href='".$this->getUrl("contacts")."'>Contact Us</a></li>";
                                        }
                                    }
                                    ?>
				</ul>
			</div><br clear="both" />
		</div>

