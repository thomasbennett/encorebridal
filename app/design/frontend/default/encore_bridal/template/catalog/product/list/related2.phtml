<?php
$_category  = Mage::getModel('catalog/layer')->getCurrentCategory();
?>
<?php if($this->getItems()->getSize()) { ?>

    <?php foreach($this->getItems() as $_item) { ?>
    <?php
    $product = Mage::getModel('catalog/product')->load($_item->getId());

    $prod_categories = $product->getCategoryIds();
    $prod_category = $prod_categories[0];
    if($prod_category == $_category->getid())
            continue;
    $prod_cat = Mage::getModel('catalog/category')->load($prod_category);

    $prod_image = "";
    foreach ($product->getMediaGalleryImages() as $image) {
        $prod_image = $image->getUrl();
        break;
    }
    if($prod_image == "")
        $prod_image = $product->getImageUrl();
    ?>

    <a href="<?php echo preg_replace("/\.html/", "", $this->getUrl($prod_cat->getUrlPath())).basename($_item->getProductUrl()); ?>" class="finish_the_look"><img src="<?php echo $prod_image; ?>" /></a>
    <?php } ?>
<?php } ?>